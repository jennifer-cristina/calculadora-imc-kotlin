        />

    <TextView
        android:text="Altura"
        style="@style/label"/>

    <TextView
        android:id="@+id/altura"
        style="@style/campos"/>

    <TextView
        android:text="Peso"
        style="@style/label"/>

    <TextView
        android:id="@+id/peso"
        style="@style/campos"/>

